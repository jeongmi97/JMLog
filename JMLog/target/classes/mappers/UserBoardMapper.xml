<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.dao.UserBoardDAO">
	
	<insert id="write" parameterType="com.spring.vo.BoardVO">
		insert into board(title, content, email) values(#{title}, #{content}, #{email})
	</insert>
	
	<select id="getPost" parameterType="int" resultType="com.spring.vo.BoardVO">
		select * from board where idx=#{postid}
	</select>
</mapper>